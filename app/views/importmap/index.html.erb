<div data-controller="importmap">
  <h1 class="font-bold text-4xl mb-4">Counter by Stimulus</h1>
  <input data-importmap-target="counter" type="text" value="0" class="block rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 mb-3">
  <button data-action="click->importmap#increment" class="rounded bg-white px-3 text-lg font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 w-16">+1</button>
  <button data-action="click->importmap#decrement" class="rounded bg-white px-3 text-lg font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 w-16">-1</button>
</div>
